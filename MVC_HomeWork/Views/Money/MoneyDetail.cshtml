@using MVC_HomeWork.Extensions
@using MVC_HomeWork.Models.ViewModels
@model IEnumerable<MVC_HomeWork.Models.ViewModels.MoneyViewModel>

@{
    Layout = null;
    var i = 0;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(m => m.Category)</th>
                <th>@Html.DisplayNameFor(m => m.Date)</th>
                <th>@Html.DisplayNameFor(m => m.Amount)</th>
                @*<th>@Html.DisplayNameFor(m => m.Description)</th>*@
            </tr>
            @foreach (var item in Model)
            {
                var category = item.Category.GetDisplayName();

                var rowColor = (category == CategoryEnum.收入.GetDisplayName() ? "blue" : "red");

            <tr style="color:@rowColor">
                <td>@(++i)</td>
                <td>@(category)</td>
                <td>@Html.DisplayFor(x => item.Date)</td>
                <td>@Html.DisplayFor(x => item.Amount)</td>
                @*<td>@Html.DisplayFor(x => item.Description)</td>*@
            </tr>
            }
        </table>
    </div>
</div>

